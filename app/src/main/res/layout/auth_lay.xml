<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:background="@drawable/loginback"
                android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="175dp"
        android:layout_alignParentTop="true"
        android:background="@drawable/loginback">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="100dp"
            android:layout_height="100dp"

            android:layout_centerHorizontal="true"
            android:layout_centerInParent="false"
            app:srcCompat="@drawable/logo"/>

        <TextView
            android:id="@+id/textView"
            android:layout_width="200dp"
            android:layout_height="wrap_content"

            android:layout_alignParentBottom="false"
            android:layout_below="@+id/logo"
            android:layout_centerHorizontal="true"
            android:text="Министерство по чрезвычайным ситуациям
Республики Узбекистан"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="13sp"/>
    </RelativeLayout>
    <RelativeLayout

        android:id="@+id/botback"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="175dp"
        android:background="#fafafa"></RelativeLayout>


    <LinearLayout
        android:id="@+id/bot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="35dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/q"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:text="Не зарегистрированы?"
            android:textColor="@android:color/darker_gray"/>

        <TextView
            android:id="@+id/signup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="Регистрация"
            android:textColor="#505050"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/mid"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/signin"
        android:layout_below="@+id/top"
        android:layout_marginEnd="30dp"
        android:layout_marginStart="30dp"
        android:gravity="center_vertical"
        android:orientation="vertical"
        >

        <EditText
            android:id="@+id/phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#E0E0E0"
            android:drawablePadding="5dp"
            android:drawableStart="@drawable/ic_phone_receiver"
            android:ems="10"
            android:hint="Номер телефона"
            android:inputType="phone"
            android:textColorHint="@android:color/darker_gray"
            android:textSize="14sp"/>

        <EditText
            android:id="@+id/pwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#E0E0E0"
            android:drawablePadding="5dp"
            android:drawableStart="@drawable/ic_lock2"
            android:ems="10"
            android:hint="Пароль"
            android:inputType="textPassword"
            android:textColorHint="@android:color/darker_gray"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/forgot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_margin="5dp"
            android:text="Забыли пароль?"
            android:textColor="#444444"
            android:textSize="13sp"/>

    </LinearLayout>


    <Button
        android:id="@+id/signin"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bot"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp"
        android:background="@drawable/signupbtn2"
        android:text="Войти"
        android:textColor="#FEFEFE"/>

    <FrameLayout
        android:id="@+id/shtor"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#60000000"
        android:visibility="gone">

    </FrameLayout>

    <ProgressBar
        android:id="@+id/loading"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone"/>


</RelativeLayout>