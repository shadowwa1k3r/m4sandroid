<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/test_begin"
    android:layout_width="match_parent"

    android:layout_height="match_parent"
    android:layout_margin="5dp"
    android:background="#651ff1"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/topqz"
        android:orientation="horizontal"
        android:padding="2dp">


        <TextView
            android:id="@+id/q_current"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerInParent="true"
            android:padding="10dp"
            android:text="1"
            android:textColor="@android:color/white"
            android:textSize="18sp"/>

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_centerInParent="true"
            app:srcCompat="@drawable/ic_question"/>

        <TextView
            android:id="@+id/q_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            android:padding="10dp"
            android:text="20"
            android:textColor="@android:color/white"
            android:textSize="18sp"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/q_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="20dp"
        android:padding="10dp"
        android:text="QuestionContent"
        android:textColor="@android:color/white"
        android:textSize="18sp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/rez"
            android:orientation="vertical"
            android:padding="15dp">

            <CheckBox
                android:id="@+id/a1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:button="@drawable/checkbox"
                android:paddingStart="10dp"
                android:text="answer1"
                android:textColor="@android:color/white"
                android:textSize="18sp"/>

            <CheckBox
                android:id="@+id/a2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:button="@drawable/checkbox"
                android:paddingStart="10dp"
                android:text="answer2"
                android:textColor="@android:color/white"
                android:textSize="18sp"/>

            <CheckBox
                android:id="@+id/a3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:button="@drawable/checkbox"
                android:paddingStart="10dp"
                android:text="answer3"
                android:textColor="@android:color/white"
                android:textSize="18sp"/>

            <CheckBox
                android:id="@+id/a4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:button="@drawable/checkbox"
                android:paddingStart="10dp"
                android:text="answer4"
                android:textColor="@android:color/white"
                android:textSize="18sp"/>

            <CheckBox
                android:id="@+id/a5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:button="@drawable/checkbox"
                android:paddingStart="10dp"
                android:text="answer5"
                android:textColor="@android:color/white"
                android:textSize="18sp"/>

        </LinearLayout>

        <Button
            android:id="@+id/next"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@drawable/btn_next"
            android:text="Следующий"
            android:textColor="@android:color/white"
            android:textSize="18sp"/>
    </RelativeLayout>
</LinearLayout>